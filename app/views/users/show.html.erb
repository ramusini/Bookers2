<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--左側-->
    <%= render 'books/user_info', book: @book, info_name: @user.name, info_intro: @user.introduction %>
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <theader>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </theader>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th><%= link_to image_tag("default-image.jpg"), user_path(book.user_id), size: '80x80' %></th>
            <th><%= link_to book.title, book_path(book.id) %></th>
            <th><%= book.body %></th>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
