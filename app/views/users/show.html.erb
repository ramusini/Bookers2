<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--左側-->
    <%= render 'books/user_info', user: @user, book: @new_book, info_name: @user.name, info_intro: @user.introduction %>
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <theader>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </theader>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th>
              <% if book.user.profile_image.attached? %>
                <a href="/users/<%= book.user_id %>"><%= image_tag book.user.profile_image, size: "80x80" %></a>
              <% else %>
                <a href="/users/<%= book.user_id %>"><%= image_tag 'default-image', size: "80x80" %></a>
              <% end %>
            </th>
            <th><%= link_to book.title, book_path(book.id) %></th>
            <th><%= book.body %></th>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
