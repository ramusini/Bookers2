<div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'default-image.jpg', size: '100x100' %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
              <th><%= info_name %></th>
          </tr>
          <tr>
            <th>introduction</th>
              <th><%= info_intro %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "edit", edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="submit">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>