<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <!--エラー表示-->
  <%= render 'error_messages', model: @new_book %>
  <div class="row">
    <!--左側-->
    <%= render 'user_info', user: current_user, book: @new_book, info_name: current_user.name, info_intro: current_user.introduction %><!--テンプレ呼び出し-->
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <% if book.user.profile_image.attached? %>
                <a href="/users/<%= book.user_id %>"><%= image_tag book.user.profile_image, size: "80x80" %></a>
              <% else %>
                <a href="/users/<%= book.user_id %>"><%= image_tag 'default-image', size: "80x80" %></a>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>