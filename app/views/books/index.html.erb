<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--左側-->
    <% if @book.errors.any? %>
      <div class = "error_explanation">
        <h2 class = "error_message_box">
          <%= @book.errors.count %> error prohibited this book from being saved:
        </h2>
        <div class = "error_message">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <%end%>
    <%= render 'user_info', book: @book, info_name: current_user.name, info_intro: current_user.introduction %><!--テンプレ呼び出し-->
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to image_tag("default-image.jpg"), user_path(book.user_id), size: '80x80' %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>